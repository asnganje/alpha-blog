<div class="container my-5 bg-secondary bg-gradient">
    <h1 class="text-center mt-4 text-white"><%= @user.username%>'s profile</h1>
    <%= avatar_for @user%>
    <div class="text-center mt-4">
        <% if logged_in? && @user == current_user %>
            <%= link_to 'Edit your Profile', edit_user_path(@user), class:"btn btn-outline-info" %>
        <% end %>
    </div>  
    <h2 class="text-center mt-4">Articles</h2>
    <%= render 'articles/article', obj:@user.articles%>
</div>