<h2>Create a new article!</h2>
<% if @article.errors. any? %>
  <h2>The following errors occurs</h2>
  <ul>
  <%@article.errors.full_messages.each do |message| %>
    <li>
      <%=message%>
    </li>
  <%end%>
  </ul>
<%end%>
<%= form_with scope: :article, url: articles_path, data: { turbo: false }, local:true do |f|%>
  <p>
    <p>
      <%=f.label :title%><br/>
      <%=f.text_field :title%>
    </p>
    <p>
      <%=f.label :description%><br/>
      <%=f.text_area :description%>
    </p>
  </p>
  <p>
    <%=f.submit%>
  </p>
<%end%>