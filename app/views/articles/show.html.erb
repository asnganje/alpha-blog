<div>
  <h2 class="text-center mt-4 text-white"><%=@article.title%></h3>
  <div class="container">
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-body rounded">
            <div class="card-header fst-italic">
              by <%= @article.user.username%>
            </div>
            <div class="card-body">
              <p class="card-text"><%=simple_format(@article.description)%></p>
                <% if logged_in? && @article.user == current_user %>
                  <%= link_to "Edit", edit_article_path(@article), class:"btn btn-outline-info"%>
                  <%= link_to "Delete", article_path(@article), data: {turbo_method: :delete}, class:"btn btn-outline-danger" %>
                <% end %>
            </div>
            <div class="card-footer text-muted">
              <small>
                Created <%= time_ago_in_words(@article.created_at)%> ago,
                Edited <%= time_ago_in_words(@article.updated_at)%> ago
              </small>
            </div>
          </div>
        </div>
      </div>
  </div>
</div>