<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj:@article%>
      <%= form_with(model: @article, local:true, class:"shadow p-3 mb-3 bg-info rounded", data: { turbo: false }) do |f|%>
          <div class="form-group row">
            <%=f.label :title, class:"col-2 col-form-label text-light"%>
            <div class="col-10">
            <%=f.text_field :title, class:"form-control shadow rounded", placeholder: "Title of article"%>
            </div>
          </div>
          <div class="form-group row my-3">
            <%=f.label :description, class:"col-2 col-form-label text-light"%>
            <div class="col-10">
              <%=f.text_area :description, rows:10, class:"form-control shadow rounded", placeholder: "Description of article"%>
            </div>
          </div>
          <div class="form-group row my-3">
            <%=f.label :category, class:"col-2 col-form-label text-light"%>
            <div class="col-10 mt-2">
              <%= select(:category, :category_ids, Category.all.collect { |c| [c.name, c.id] }, 
                { prompt: "Make your selection from the list below (can be empty)", multiple: true }, 
                { class: "form-control" }) %>
            </div>
          </div>
        <div class="form-group row justify-content-center">
          <%=f.submit class:"btn btn-outline-light btn-lg w-auto"%>
        </div>
      <%end%>
      </div>
      <%= link_to "[Cancel edit and return to Articles]", articles_path, class:"d-flex justify-content-center mt-2 text-info" %>
  </div>
</div>
