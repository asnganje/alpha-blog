<h2>All Articles!</h3>
<table>
  <thead>
    <tr>
      <th>
        ID
      </th>
      <th>
        TITLE
      </th>
      <th>
        Description
      </th>
      <th>
        Actions
      </th>
    </tr>
  </thead>
  <tbody>
  <%@articles.each do |article|%>
  <tr>
    <td>
      <%=article.id%>
    </td>
    <td>
      <%=article.title%>
    </td>
    <td>
      <%=article.description%>
    </td>
    <td>
      <%= link_to 'Show', article_path(article) %>
    </td>
    <td>
      <%= link_to 'Delete', article_path(article), data: {
                      turbo_method: :delete,
                      turbo_confirm: "Are you sure?"
                    } %>
    </td>
  </tr>
  <%end%>
  </tbody>
</table>
